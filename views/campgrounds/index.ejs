\<%=layout('layout/boiler') %>
    <h6 class="display-6 fs-3">From Coastal Retreats to Mountain Hideaways</h6>
        <% for (let camp of campgrounds) { %>
            <div class="container-md mt-4">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/loc4.jpg" alt="" class="img-fluid rounded-start">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= camp.title %></h5>
                                <p class="card-text" style="text-align: justify;"><%= camp.description %></p>
                                <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
                                <a href="/campgrounds/<%=camp._id%>" class="btn bg-info-subtle text-body-emphasis mt-4">View <%=camp.title%></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
